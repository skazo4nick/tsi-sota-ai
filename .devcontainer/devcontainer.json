{
  "name": "TSI SOTA AI",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.autopep8",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.python-debugger",
        "ms-toolsai.jupyter",
        "redhat.vscode-yaml",
        "mechatroner.rainbow-csv",
        "ms-azuretools.vscode-docker",
        "ms-vscode.data-wrangler",
        "doppler.doppler",
        "github.copilot",
        "github.copilot-chat",
        "ban.jupyter-notebook-renderers",
        "ms-jupyter.jupyter-cell-tags",
        "ms-jupyter.jupyter-keymap",
        "saoudrizwan.claude-dev"
      ]
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "source /root/.bashrc && conda env create --file /tmp/environment.yaml && conda activate tsi"
}